<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="gestionhorario.aplicacionmovil.uts.horario.controladores.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="168dp"
            android:layout_weight="0.73"
            android:foregroundGravity="center_vertical|center_horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal"
            android:weightSum="1">

            <Gallery
                android:id="@+id/galeriaLogin"
                android:layout_width="360dp"
                android:layout_height="153dp"

                android:animationCache="false"
                android:animationDuration="1"
                android:elevation="9dp"
                android:focusable="false"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:touchscreenBlocksFocus="false" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="331dp"
            android:layout_weight="0.37"
            android:background="@drawable/fondo"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="289dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CODIGO"
                    android:textAlignment="center"
                    android:textColor="#060202"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/txtCodigo"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:drawableLeft="@drawable/ic_supervisor_account_24dp"
                    android:ems="10"
                    android:fontFamily="sans-serif"
                    android:hint="Ingrese el codigo"
                    android:inputType="textPersonName"
                    android:textColor="#0d0d0d" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="CONTRASEÑA"
                    android:textAlignment="center"
                    android:textColor="#060202"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/txtPassword"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:drawableLeft="@drawable/ic_https_24dp"
                    android:ems="10"
                    android:fontFamily="sans-serif"
                    android:hint="Ingrese su contraseña"
                    android:inputType="textPassword"
                    android:textColor="#0d0d0d" />

                <Button
                    android:id="@+id/btnLogin"
                    android:layout_width="157dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/border_style_liner"
                    android:text="Aceptar"
                    android:textColor="#3f4853"
                    android:textSize="20dp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnGenerarPdf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_cancelar_inscripcion"
            android:orientation="horizontal"
            android:weightSum="1"
            android:gravity="center_horizontal"
            android:layout_weight="0.35">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:drawableLeft="@android:drawable/stat_sys_download_done"
                android:gravity="center_vertical|center_horizontal"
                android:paddingLeft="10dp"
                android:text=" Horario Tutorias"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
