<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/estudiantes"
    android:fitsSystemWindows="false"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="gestionhorario.aplicacionmovil.uts.horario.controladores.OpcionesActivity">


    <LinearLayout
        android:id="@+id/btnOpcionUsuarios"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.06"
        android:background="@drawable/border_boton_menu"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_group_add_24dp"
            android:gravity="center_vertical"
            android:isScrollContainer="false"
            android:paddingLeft="10dp"
            android:text="  Usuario"
            android:textColor="#010101"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnOpcionRol"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="0.06"
        android:background="@drawable/border_boton_menu"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_rol"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="  Rol"
            android:textColor="#000000"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnOpcionMateria"
        android:layout_width="336dp"
        android:layout_height="49dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.06"
        android:background="@drawable/border_boton_menu"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_materia"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="  Materia"
            android:textColor="#000000"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnOpcionHorario"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="0.06"
        android:background="@drawable/border_boton_menu"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_horario"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="  Horario"
            android:textColor="#000000"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnOpcionur"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="0.06"
        android:background="@drawable/border_boton_menu"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_relacionur"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="  Usuario - Rol"
            android:textColor="#000000"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnOpcionmh"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="0.06"
        android:background="@drawable/border_boton_menu"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_relacionmh"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="  Materia-Horario"
            android:textColor="#000000"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnOpcionum"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="0.06"
        android:background="@drawable/border_boton_menu"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_usu_mat"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="  Usuario-Materia"
            android:textColor="#000000"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnOpcioubi"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="0.06"
        android:background="@drawable/border_boton_menu"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_ubicacion"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="  Ubicación"
            android:textColor="#000000"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnOpcioubiHor"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="0.06"
        android:background="@drawable/border_boton_menu"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="  Ubicación-Horario"
            android:textColor="#000000"
            android:textSize="30dp"
            android:drawableLeft="@drawable/ic_ubi_hor" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnVariable"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="0.06"
        android:background="@drawable/border_boton_menu"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView19"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_variable"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="  Variables"
            android:textColor="#000000"
            android:textSize="30dp" />
    </LinearLayout>
</LinearLayout>
